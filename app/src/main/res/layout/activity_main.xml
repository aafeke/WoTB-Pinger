<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/text_ar"
            android:layout_width="159dp"
            android:layout_height="46dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="35dp"
            android:text="Ping AR"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ru" />

        <TextView
            android:id="@+id/text_la"
            android:layout_width="159dp"
            android:layout_height="46dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="35dp"
            android:text="Ping LA"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ar" />

        <TextView
            android:id="@+id/text_eu"
            android:layout_width="159dp"
            android:layout_height="46dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="52dp"
            android:text="Ping EU"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_na"
            android:layout_width="159dp"
            android:layout_height="46dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="35dp"
            android:text="Ping NA"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_eu" />

        <TextView
            android:id="@+id/text_ru"
            android:layout_width="159dp"
            android:layout_height="46dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="35dp"
            android:text="Ping RU"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_as" />

        <TextView
            android:id="@+id/text_as"
            android:layout_width="159dp"
            android:layout_height="46dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="35dp"
            android:text="Ping AS"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_na" />

        <ImageView
            android:id="@+id/flag_la"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/flag_la"
            app:layout_constraintStart_toEndOf="@+id/text_ru"
            app:layout_constraintTop_toBottomOf="@+id/flag_ar" />

        <ImageView
            android:id="@+id/flag_ar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/flag_ar"
            app:layout_constraintStart_toEndOf="@+id/text_ru"
            app:layout_constraintTop_toBottomOf="@+id/flag_ru" />

        <ImageView
            android:id="@+id/flag_eu"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/flag_eu"
            app:layout_constraintStart_toEndOf="@+id/text_eu"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/flag_na"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/flag_na"
            app:layout_constraintStart_toEndOf="@+id/text_na"
            app:layout_constraintTop_toBottomOf="@+id/flag_eu" />

        <ImageView
            android:id="@+id/flag_as"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/flag_as"
            app:layout_constraintStart_toEndOf="@+id/text_as"
            app:layout_constraintTop_toBottomOf="@+id/flag_na" />

        <ImageView
            android:id="@+id/flag_ru"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/flag_ru"
            app:layout_constraintStart_toEndOf="@+id/text_ru"
            app:layout_constraintTop_toBottomOf="@+id/flag_as" />

        <TextView
            android:id="@+id/latency_la"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/latency_la"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latency_ar" />

        <TextView
            android:id="@+id/latency_ar"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/latency_ar"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latency_ru" />

        <TextView
            android:id="@+id/latency_eu"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/latency_eu"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/latency_na"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/latency_na"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latency_eu" />

        <TextView
            android:id="@+id/latency_as"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/latency_as"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latency_na" />

        <TextView
            android:id="@+id/latency_ru"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/latency_ru"
            android:textColor="@android:color/background_light"
            android:textSize="12pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latency_as" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>